<div class="fragment" id="page_feed">
<ol id="activities">
  {{#each model}}
  <li class="activity">
    <header class="clearfix">
      <div class="img">
        <img {{bind-attr src=author.image}} />
      </div>
      <div class="about">
        <h5 class="ellipsis">
          {{#link-to 'parliamentarian' author.id}}
          {{author.name}}
          {{/link-to}}
          <span class="at">na <a href="{{location.url}}">{{location.name}}</a></span>
        </h5>
        <time>{{humanize-time published_at}}</time>
      </div>
    </header>
    <p>{{content.verb}} <span class="value">{{humanize-price content.value}}</span> {{{content.text}}} </p>
    <div class="social-tools">
      <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="false" data-share="true"></div>
      <div class="fb-comments" data-href="http://localhost:3000/nelson-marquezelli/posts/{{id}}" data-width="512" data-numposts="5" data-colorscheme="light"></div>
    </div>
  </li>
  {{/each}}
</ol>
</div>
